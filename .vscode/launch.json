    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": []
        },
        {
            "name": "Pester: Tests from current file",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/test.ps1",
            "args": [
                "-File",
                "${file}"
            ]
        },
        {
            "name": "Pester: All tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/test.ps1",
            "args": []
        }
    ]
}
